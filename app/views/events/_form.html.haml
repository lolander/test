= form_for @event, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :title, 'Rubrik', :class => 'control-label'
    = f.text_field :title, :class => 'form-control'
  .form-group
    = f.label :description, 'Beskrivning', :class => 'control-label'
    = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :vehicle_id, 'Tillhör', :class => 'control-label'
    = f.collection_select :vehicle_id, Vehicle.all, :id, :reg_num, :prompt => "Tillhörande"
  .form-group
    = f.label :prio, 'Prio', :class => 'control-label'
    = f.collection_select :prio, Event::PRIOS, :name, :name, :prompt => "Prio"
  .form_group
    = f.label :done, 'Åtgärdad'
    = f.check_box :done
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn'
